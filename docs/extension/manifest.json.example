{
  "manifest_version": 3,
  "name": "TradeAutopsy Rule Validator",
  "version": "1.0.0",
  "description": "Real-time trading rule validation for TradeAutopsy",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://yourapp.com/*",
    "https://kite.zerodha.com/*",
    "https://*.zerodha.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://kite.zerodha.com/*",
        "https://*.zerodha.com/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "options_page": "options.html"
}
